<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Button" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/iv_hongbao"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ico_hongbao" />

        <ImageView
            android:id="@+id/iv_jinbi"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ico_hongbao_jinbi" />

        <com.example.myapplication.widge.GradientTextView
            android:id="@+id/tv_bonus"
            android:textColor="@color/white"
            android:visibility="gone"
            android:drawablePadding="6dp"
            android:text="+120000"
            android:drawableLeft="@drawable/ic_ico_hongbao_jinbi"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


    </RelativeLayout>
</RelativeLayout>
